generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  schemas  = ["marghai"]
}

model customer {
  id              String   @id @default(dbgenerated("concat('cus_', gen_random_uuid())"))
  first_name      String
  last_name       String
  email           String   @unique
  profile_picture String?
  password        String
  location        String?
  company         String?
  phone           String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @default(now())
  job             job[]

  @@schema("marghai")
}

model job {
  id           String           @id @default(dbgenerated("concat('job_', gen_random_uuid())"))
  title        String
  company      String
  location     String
  type         String
  salary       String
  deadline     DateTime
  postedDate   DateTime
  description  String
  logo         String
  customerId   String
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @default(now())
  customer     customer         @relation(fields: [customerId], references: [id], onDelete: Cascade)
  applications jobApplication[]

  @@schema("marghai")
}

model jobApplication {
  id          String   @id @default(dbgenerated("concat('app_', gen_random_uuid())"))
  jobId       String
  fullName    String
  email       String
  phone       String?
  resume      String?
  coverLetter String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
  job         job      @relation(fields: [jobId], references: [id], onDelete: Cascade)

  @@schema("marghai")
}
